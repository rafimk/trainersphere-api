{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "Authorization": {
    "Permissions": {
      "CacheKeyPrefix": "permissions-",
      "CacheTimeInMinutes": 15
    }
  },
  "JwtBearer": {
    "Audience": "",
    "Authority": "",
    "IncludeErrorDetails": false,
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateIssuer": true,
      "ValidIssuer": "",
      "ValidateAudience": true,
      "ValidAudience": "",
      "ValidateLifetime": true,
      "NameClaimType": "sub"
    }
  },
  "GoogleApplicationCredentials": "",
  "Modules": {
    "Users": {
      "Authorization": {
        "SameUser": {
          "CacheKeyPrefix": "same-user-",
          "CacheTimeInMinutes": 15
        }
      },
      "BackgroundJobs": {
        "ProcessInboxMessages": {
          "IntervalInSeconds": 1,
          "RetryCount": 3,
          "BatchSize": 50
        },
        "ProcessOutboxMessages": {
          "IntervalInSeconds": 1,
          "RetryCount": 3,
          "BatchSize": 50
        }
      }
    },
    "Training": {
      "BackgroundJobs": {
        "ProcessInboxMessages": {
          "IntervalInSeconds": 1,
          "RetryCount": 3,
          "BatchSize": 50
        },
        "ProcessOutboxMessages": {
          "IntervalInSeconds": 1,
          "RetryCount": 3,
          "BatchSize": 50
        }
      }
    },
    "Notifications": {
      "BackgroundJobs": {
        "ProcessInboxMessages": {
          "IntervalInSeconds": 1,
          "RetryCount": 3,
          "BatchSize": 50
        }
      },
      "Mailersend": {
        "BaseUrl": "",
        "AccessToken": "",
        "SenderEmail": "",
        "Templates": {
          "WelcomeEmail": "",
          "ClientInvitationEmail": ""
        }
      }
    }
  }
}
